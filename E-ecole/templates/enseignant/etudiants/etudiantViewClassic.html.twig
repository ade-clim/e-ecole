{% extends 'baseEnseignant.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h2 class="h3 mb-0 text-gray-800">Mes etudiants</h2>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <div class="dropdown">
                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span data-feather="calendar"></span>Affichage
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="{{ path('ens_etudiant_view_avancee') }}">Avancee</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% for keys in etudiant|keys %}
                        {% for etudiants in etudiant[keys]%}
                            <div class="col-md-3">
                                <div class="card mb-4 shadow-sm">
                                    <img src="{{ etudiants.photo }}" alt="" width="250px">
                                    <div class="card-body">
                                        <p class="card-text">
                                            Promo: {{ etudiants.promotion.libelle }}<br>
                                            Nom: {{ etudiants.nom }}<br>
                                            Prenom: {{ etudiants.prenom }}
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a href="{{ path('ens_etudiant_show',{'id':etudiants.id}) }}"><i style="color: green" class="fas fa-eye"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
            <div class="container d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item">{{ knp_pagination_render(etudiant) }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
